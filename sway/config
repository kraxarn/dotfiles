# Input config
input "type:keyboard" {
    xkb_layout se,jp
}
input "1133:16507:Logitech_MX_Vertical" {
    accel_profile "flat"
    pointer_accel -0.6
}
input "type:touchpad" {
    tap enabled
    natural_scroll enabled
    dwt enabled
    middle_emulation enabled
    scroll_method two_finger
}

# Brightness control
set $brightness brightnessctl --class backlight
bindsym XF86MonBrightnessDown exec $brightness 5-
bindsym XF86MonBrightnessUp   exec $brightness +5

# Media controls
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next

# Volume controls
set $setvolume pactl set-sink-volume @DEFAULT_SINK@
bindsym XF86AudioRaiseVolume exec $setvolume +5%
bindsym XF86AudioLowerVolume exec $setvolume -5%

# Bar
bar {
    swaybar_command waybar
}

# Idle
exec swayidle -w \
	timeout 300 'swaylock -f' \
	timeout 360 'swaymsg "output * power off"' \
	resume 'swaymsg "output * power on"' \
	before-sleep 'swaylock -f'

