assign [app_id="spotify-qt"]        workspace 4
assign [app_id="jetbrains-toolbox"] workspace 5
assign [app_id="1password"]         workspace 5

# Default monitor for workspaces
workspace 1 output DP-1
workspace 2 output HDMI-A-1
workspace 3 output DP-1
workspace 4 output DP-1
workspace 5 output DP-1
workspace 6 output DP-1

# Auto start applications
exec ~/.local/share/JetBrains/Toolbox/apps/jetbrains-toolbox/bin/jetbrains-toolbox
# exec ~/.local/share/JetBrains/Toolbox/apps/rider/bin/rider
exec ~/.local/share/JetBrains/Toolbox/apps/intellij-idea-community-edition/bin/idea
exec firefox-devedition
exec slack
exec spotify-qt
exec 1password --ozone-platform-hint=x11

# Sway theming
gaps inner 10
default_border pixel 2

